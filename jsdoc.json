{
  "opts": {
    "recurse": true,
    "destination": "./docs"
  },
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "source": {
    "include": [
      "./packages/@xelah-core/src",
      "./packages/@xelah-type-perf-html/src"
    ]
  },
  "plugins": ["plugins/markdown" ],
  "templates": {
    "better-docs": {
      "name": "Xelah"
    }
  }
}
